{
	"name": "vite-react-template",
	"version": "3.0.0",
	"type": "module",
	"scripts": {
		"setup:openapi": "bunx --bun openapi-typescript ./openapi.json -o ./src/lib/schema.gen.d.ts",
		"setup:schemas": "bun run generate-schemas.ts ./openapi.json ./src/lib/validators.gen.ts",
		"setup:all": "bun run setup:openapi && bun run setup:schemas",
		"dev": "bun run setup:all && bun run vite",
		"build": "bun run setup:all && bun run vite build && bun run tsc",
		"lint": "bun run biome check src && bun run prettier --check 'src/**/*.{s,}css'",
		"preview": "vite preview"
	},
	"dependencies": {
		"@tanstack/react-query": "5.90.7",
		"@uidotdev/usehooks": "2.4.1",
		"babel-plugin-react-compiler": "1.0.0",
		"classnames": "2.5.1",
		"i18next": "25.6.2",
		"i18next-http-backend": "3.0.2",
		"openapi-fetch": "0.15.0",
		"openapi-react-query": "0.5.1",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"react-i18next": "16.2.4",
		"react-router": "7.9.5",
		"react-zorm": "0.9.0",
		"reset-css": "5.0.2",
		"zod": "3.25.76",
		"zod-i18n-map": "2.27.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@types/bun": "1.3.2",
		"@types/react": "19.2.2",
		"@types/react-dom": "19.2.2",
		"@vitejs/plugin-react": "5.1.0",
		"json-refs": "3.0.15",
		"json-schema-to-zod": "2.6.1",
		"lefthook": "2.0.3",
		"openapi-types": "12.1.3",
		"openapi-typescript": "7.10.1",
		"postcss": "8.5.6",
		"prettier": "3.6.2",
		"prettier-plugin-css-order": "2.1.2",
		"sass": "1.94.0",
		"typescript": "5.9.3",
		"vite": "7.2.2",
		"vite-css-modules": "1.11.1",
		"vite-plugin-mkcert": "1.17.9",
		"vite-plugin-svgr": "4.5.0",
		"vite-tsconfig-paths": "5.1.4"
	}
}
